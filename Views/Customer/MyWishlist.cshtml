@model IEnumerable<OnlineShopProject.Models.Product>

@{
    ViewBag.Title = "MyWishlist";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>MyWishlist</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><img src="@Url.Content(@item.ProductImage)" width="100" height="100" style="border-radius:50%;" alt="Alternate Text" /></td>
                <td>
                    <a href="@Url.Action("AddFromWishlist","Customer", new { id = item.ProductId})">
                        <i class="fas fa-cart-plus fa-2x"></i>
                    </a>
                    <a href="@Url.Action("RemoveFromList","Customer", new { id = item.ProductId })" class="ml-2">
                        <i class="fas fa fa-trash-alt fa-2x text-danger "></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

