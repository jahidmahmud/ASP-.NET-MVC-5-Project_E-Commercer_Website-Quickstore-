@model IEnumerable<OnlineShopProject.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{int counts = 1; }
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Product
        <a href="@Url.Action("Create", "Product")" class="btn btn-info float-right fa fa-plus">Add New Product</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover text-center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Quantity</th>
                        <th>price</th>
                        <th>Picture</th>
                        <th>Added</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counts</td>
                            <td>@item.ProductName</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td><img src="@Url.Content(@item.ProductImage)" alt="Product Image" width="150" height="150" style="border-radius:50%;" /></td>
                            <td>@item.CreatedDate</td>
                            <td>
                                @Html.ActionLink(" ", "Edit", "Product", new { id = item.ProductId }, new { @class = "btn text-info fa fa-pencil-alt" })
                                <span title="Remove">@Html.ActionLink(" ", "Delete", "Product", new { id = item.ProductId }, new { @class = "btn text-danger fa fa-trash-alt" })</span>
                            </td>
                        </tr>
                        counts++;
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
