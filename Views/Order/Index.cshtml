
@model IEnumerable<OnlineShopProject.Models.ShippingDetails>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{int counts = 1; }
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Product
        <a href="@Url.Action("Create", "Product")" class="btn btn-info float-right fa fa-plus">Add New Product</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover text-center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>User Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Country</th>
                        <th>Zip Code</th>
                        <th>Order Id</th>
                        <th>Paid Amount</th>
                        <th>Payment Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counts</td>
                            <td>@item.Users.Username</td>
                            <td>@item.Adress</td>
                            <td>@item.City</td>
                            <td>@item.State</td>
                            <td>@item.Country</td>
                            <td>@item.ZipCode</td>
                            <td>@item.OrderId</td>
                            <td>@item.AmountPaid</td>
                            <td>@item.PaymentType</td>
                            <td>
                                @Html.ActionLink(" ", "Edit", "Product", new { id = item.ShippingDetailId }, new { @class = "btn text-info fa fa-pencil-alt" })
                            </td>
                        </tr>
                        counts++;
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>