@model IEnumerable<OnlineShopProject.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{int counts = 1; }
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-envelope-open text-primary"></i>
        Mail List
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover text-center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counts</td>
                            <td>@item.Cname</td>
                            <td>@item.Cemail</td>
                            <td>@item.Csubject</td>
                            <td>@item.Cmessage</td>
                            <td>
                                @Html.ActionLink(" ", "MailView", "Admin", new { id = item.Cid }, new { @class = "btn text-info fas fa-info-circle" })
                            </td>
                        </tr>
                        counts++;
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
