@model IEnumerable<OnlineShopProject.Models.Blogging>

@{
    ViewBag.Title = "TableBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{int count = 0; }


<div class="container-fluid">
    @*Breadcrumbs*@
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Blogging</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table text-primary"></i>
            
            <a href="@Url.Action("AddBlog", "Admin")" class="btn btn-info float-right fa fa-plus">Add Catagory</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Sr. No.</th>
                            <th>S Heading</th>
                            <th>B Heading</th>
                            <th>S Description</th>
                            <th>L Description</th>
                            <th>Author</th>
                            <th>Image</th>
                            <th>Posted On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count = count + 1;
                            <tr>
                                <td>@count</td>
                                <td>@item.ShortHeading</td>
                                <td>@item.BlogHeading</td>
                                <td>@item.ShortDescription</td>
                                <td>@item.LongDescription</td>
                                <td>@item.Author</td>
                                <td><img src="@Url.Content(@item.BlogImage)" alt="Blog Image" width="150" height="150" style="border-radius:50%;" /></td>
                                <td>@item.PostedOn</td>
                                <td>
                                    <span title="Update">@Html.ActionLink(" ", "BlogEdit", "Admin", new { id = item.BlogId }, new { @class = "btn text-info fa fa-pencil-alt" })</span>
                                    <span title="Remove">@Html.ActionLink(" ", "BlogDelete", "Admin", new { id = item.BlogId }, new { @class = "btn text-danger fa fa-trash-alt" })</span>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>




