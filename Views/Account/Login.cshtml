@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign in & Sign up Form</title>
    <!-- Login and Registration  -->
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/credential.css" />
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form action="#" method="post" class="sign-in-form">
                    <h2 class="title">Sign in</h2>
                    <div class="color">@ViewBag.Error</div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="text" name="Email" required placeholder="Email" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="password" required placeholder="Password" />
                    </div>
                    <input type="submit" value="Login" class="btn solid" />
                    <p><a href="@Url.Action("ForgotPasswordLink", "Account")">Forgot Password? </a></p>
                    <p class="social-text">Or Sign in with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                        ex ratione. Aliquid!
                    </p>
                    <a href="@Url.Action("Index", "Customer")">
                        <button class="btn transparent" id="sign-up-btn">
                            View Shop
                        </button>
                    </a>
                    <a href="@Url.Action("Registration", "Account")">
                        <button class="btn transparent" id="sign-up-btn">
                            Sign Up
                        </button>
                    </a>
                </div>
                <img src="~/Content/images/credential/log.svg" class="image" alt="" />
            </div>
        </div>
    </div>
    <!--Login and Registration-->
    <script src="~/Content/javascript/credential.js"></script>
</body>




