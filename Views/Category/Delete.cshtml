@model OnlineShopProject.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    @Html.HiddenFor(model => model.CategoryId)

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label">Category Name</label>

            @Html.DisplayNameFor(model => model.CategoryName)
            @Html.DisplayFor(model => model.CategoryName)
        </div>
    </div>

  @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" data-toggle="modal" data-target="#exampleModal" class="btn btn-Info" />
        </div>
    }

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <strong class="text-danger">Are you sure you want to delete this?</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    @using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                    
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-success" />
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

